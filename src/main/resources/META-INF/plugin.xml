<idea-plugin>
    <id>com.example.flutterassetsmanager</id>
    <name>Flutter Assets Manager</name>
    <version>1.0.0</version>
    <vendor>example</vendor>

    <depends>com.intellij.modules.platform</depends>
<!--    <depends>io.flutter</depends>-->

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.example.flutterassetplugin.FlutterAssetsManagerService"/>
        <projectComponent implementation="com.example.flutterassetplugin.FlutterAssetsManagerComponent"/>
        <toolWindow factoryClass="com.example.flutterassetplugin.FlutterAssetsManagerToolWindowFactory"
                    id="Flutter Assets Manager"
                    anchor="right"
                    icon="/icons/flutter_icon.svg"
        />
    </extensions>

    <actions>
        <action id="com.example.flutterassetsmanager.RegenerateAssets"
                class="com.example.flutterassetplugin.actions.RegenerateAssetsAction"
                text="Regenerate Assets"
                icon="/icons/autorenew.svg"/>
        <action id="com.example.flutterassetsmanager.ConfigureFolder"
                class="com.example.flutterassetplugin.actions.ConfigureFolderAction"
                text="Configure Folder"
                icon="/icons/settings.svg"/>
        <action id="com.example.flutterassetsmanager.ScanForChanges"
                class="com.example.flutterassetplugin.actions.ScanForChangesAction"
                text="Scan for Changes"
                icon="/icons/search.svg"/>
        <action id="com.example.flutterassetsmanager.MigrateAssets"
                class="com.example.flutterassetplugin.actions.MigrateAssetsAction"
                text="Migrate Assets"
                icon="/icons/sync_alt.svg"/>
        <action id="com.example.flutterassetsmanager.ActionsDropdown"
                class="com.example.flutterassetplugin.actions.ActionsDropdownAction"
                text="Actions"
                popup="true">
            <add-to-group group-id="com.example.flutterassetsmanager.FlutterAssetsManagerToolbar" anchor="last"/>
        </action>

        <group id="com.example.flutterassetsmanager.FlutterAssetsManagerToolbar"
               text="Flutter Assets Manager Toolbar"
               popup="false">
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <action id="com.example.flutterassetsmanager.RegenerateAssets"
                    class="com.example.flutterassetplugin.actions.RegenerateAssetsAction"/>
            <action id="com.example.flutterassetsmanager.ConfigureFolder"
                    class="com.example.flutterassetplugin.actions.ConfigureFolderAction"/>
            <action id="com.example.flutterassetsmanager.ScanForChanges"
                    class="com.example.flutterassetplugin.actions.ScanForChangesAction"/>
            <action id="com.example.flutterassetsmanager.MigrateAssets"
                    class="com.example.flutterassetplugin.actions.MigrateAssetsAction"/>
            <action id="com.example.flutterassetsmanager.ActionsDropdown"
                    class="com.example.flutterassetplugin.actions.ActionsDropdownAction"
                    popup="true">
                <add-to-group group-id="com.example.flutterassetsmanager.FlutterAssetsManagerToolbar" anchor="last"/>
            </action>
        </group>

    </actions>
</idea-plugin>